    <script>
        function convertCurrency() {
            const sourceCurrency = document.getElementById("source-currency").value;
            const targetCurrency = document.getElementById("target-currency").value;
            const rateType = document.getElementById("rate-type").value;
            const amount = parseFloat(document.getElementById("amount").value);
            const rates = <?= json_encode($exchangeData['rates']); ?>;

            let sourceRate = 1;
            let targetRate = 1;

            if (sourceCurrency !== 'VND') {
                const sourceData = rates.find(rate => rate.currency_code === sourceCurrency);
                sourceRate = parseFloat(sourceData[rateType]);
            }

            if (targetCurrency !== 'VND') {
                const targetData = rates.find(rate => rate.currency_code === targetCurrency);
                targetRate = parseFloat(targetData[rateType]);
            }

            if (isNaN(sourceRate) || isNaN(targetRate)) {
                document.getElementById("conversion-result").innerText = "Loại giá không hợp lệ.";
                return;
            }

            const result = (amount * sourceRate) / targetRate;
            document.getElementById("conversion-result").innerText = `Số tiền quy đổi: ${result.toFixed(2)} ${targetCurrency}`;
        }
    </script>
